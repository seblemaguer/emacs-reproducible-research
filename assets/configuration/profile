#-*- mode: sh; -*-

# Main path variable
export PATH=${HOME}/environment/local/bin:$PATH

# Libraries
export DYLD_LIBRARY_PATH=$HOME/environment/local/lib:$DYLD_LIBRARY_PATH
export LD_LIBRARY_PATH=$HOME/environment/local/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=$HOME/environment/local/lib:$LIBRARY_PATH
export PKG_CONFIG_PATH=$HOME/environment/local/lib/pkgconfig:$PKG_CONFIG_PATH

# Include path
export CPATH=$HOME/environment/local/include:$CPATH
export C_INCLUDE_PATH=$HOME/environment/local/include:$C_INCLUDE_PATH
export CPLUS_INCLUDE_PATH=$HOME/environment/local/include:$CPLUS_INCLUDE_PATH

# Manpage
export MANPATH=$HOME/environment/local/share/man:$MANPATH
export INFOPATH=$HOME/environment/local/share/info:$INFOPATH
